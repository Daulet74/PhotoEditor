<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoEditorActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnChooseVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Видеоны таңдау" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btnChooseVideo"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnStartVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Видеоны бастау" />

            <Button
                android:id="@+id/btnPauseVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пауза"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Видеоны сақтау"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</RelativeLayout>
